  </filter>
  
  <filter>
  	<filter-name>AreaFilterC</filter-name>
  	<filter-class>filter.AreaFilterC</filter-class>
  </filter>
  
  <!-- 配置過濾器 -->
  <filter-mapping>
  	<filter-name>AreaFilterC</filter-name>
  	<url-pattern>/servlet/area</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
  	<filter-name>AreaFilterB</filter-name>
  	<url-pattern>/servlet/area</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
  	<filter-name>AreaFilterA</filter-name>
  	<url-pattern>/servlet/area</url-pattern>
  </filter-mapping>
  
  
